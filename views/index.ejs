<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Youtube videos</title>
    <style>
        .container {
            display: flex;
            /* width: 100%; */
            flex-direction: column;
            background-color: aliceblue;
        }

        .card {
            width: 100%;
            height: 200px;
            display: flex; 
            align-items: center; 
            box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.1);         
        }

        .card:hover {
            transform: scale(1.025);
        }

        .card img {
            object-fit: contain;
            margin: 10px;
        }

        .content {
            margin: 10px;
        }

    </style>
</head>
<body>
    <main>
    <ul class="container">
        <!-- mapping the fetched data -->
        <% data.forEach((item) => { %>
            <li class="card">
                <img src=<%= item.thumbnails.default.url %> alt="">
                <div class="content">
                    <h3><%= item.title %></h3>
                    <h5><%= item.channel %></h5>
                    <p><%= item.description %></p>
                </div>
            </li>
        <% }) %>
    </ul>
    </main>
</body>
</html>